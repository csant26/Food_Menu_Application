@model List<Food_Menu_Application.Models.Dish>
@{
    ViewData["Title"] = "My Food Page";
}
@{
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-6">
                    <div class="d-flex justify-content-center">@item.Name</div>
                    <div class="d-flex justify-content-center">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.ImageUrl" style="width:60%" />
                        </a>
                    </div>
                    <div class="d-flex justify-content-center">@item.Price.ToString("N2") Dollars</div>
                </div>
            }
        </div>
    </div>
}